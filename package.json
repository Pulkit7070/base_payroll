{
  "name": "bulk-payroll",
  "version": "1.0.0",
  "description": "Production-ready bulk payroll system with CSV upload, job queue, and payment processing",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "worker": "tsx src/worker/index.ts",
