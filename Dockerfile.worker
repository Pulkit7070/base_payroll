# Worker Dockerfile - separate process for background jobs
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies
RUN npm ci --only=production && npm cache clean --force

# Copy source code
COPY src ./src
COPY tsconfig.json ./

# Generate Prisma client
RUN npx prisma generate

# Set environment
ENV NODE_ENV=production

# Start worker
CMD ["npm", "run", "worker"]
